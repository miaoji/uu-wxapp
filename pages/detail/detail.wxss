/* pages/detail/detail.wxss */
page {
  background-color: #F1F2F3;
}

.d-wrap {
	
}

.intro {
	background-color: #FFF;
	padding-bottom: 20rpx;
}

.banner {
	width: 100%;
	height: 364rpx;
	position: relative;
}

.banner-img {
	width: 100%;
	height: 364rpx;
}

.banner-number {
	position: absolute;
	right: 20rpx;
	bottom: 16rpx;
	font-size: 24rpx;
	color: rgba(255, 255, 255, .6);
}

.title {
	margin-top: 30rpx;
	color: #333;
	font-size: 38rpx;
	font-weight: 700;
	padding: 0 20rpx;
}

.tags {
	margin: 10rpx 0;
}

.sd {
	padding: 0 20rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	height: 120rpx;
}

.saled {
	display: flex;
	flex-direction: row;
	align-items: flex-end;
	font-size: 28rpx;
	color: #FA0606;
	padding-bottom: 10rpx;
}

.real-price {
	font-size: 48rpx;
	font-weight: 700;
	color: #FA0606;
}

.up-price {
	font-size: 28rpx;
	color: #353535;
	padding-bottom: 10rpx;
	padding-left: 2rpx;
}


.price { 
	display: flex;
	align-items: flex-end;
	font-size: 28rpx;
	color: #FA0606;
	padding-bottom: 20rpx;
}

.gray {
	padding: 0 20rpx;
}

.line {
	width: 100%;
	height: 1rpx;
	background-color: rgba(0, 0, 0, .1);
}

.desc {
	padding: 10rpx 20rpx 0 20rpx;
	font-size: 28rpx;
	color: #888;
}

.html-c {
	margin-top: 20rpx;
	padding: 20rpx;
	background-color: #FFF;
	min-height: 200rpx;
}

.operation {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	margin-top: 40rpx;
	display: flex;
	flex-direction: row;
	height: 120rpx;
	background-color: #FFF;
}

.cc {
	flex: 1;
	display: flex;
	flex-direction: row;
}

.cc-contact {
	flex: 1;
	position: relative;
}

.cc-cart {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
}

.cc-icon {
	width: 48rpx;
	height: 48rpx;
}

.we-icon {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	pointer-events: none;
}

.cs_button{
	width: 100%;
	height: 100%;
	opacity: 0;
}

.buy {
	flex: 2;
	display: flex;
	justify-content: flex-end;
}

.buy-btn {
	width: 270rpx;
	height: 100%;
	color: #FFF;
	font-size: 34rpx;
	background-color: #FF0607;
	border-radius: 0;
	margin: 0;
	line-height: 120rpx;
}

.jg {
	height: 160rpx;
	background-color: #F1F2F3;
}