<view class="wrap">
	<view class="detail">
		<view class="d-content">
			<div class="d-line">
				<view class="intro">
					产品名称：
				</view>
				<view class="content">
					<view class="name tourname red-word">
						阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s阳春三月木s
					</view>
				</view>
			</div>
			<div class="d-line">
				<view class="intro">
					出发城市：
				</view>
				<view class="content">
					<view class="name red-word">
						上海
					</view>
				</view>
			</div>
			<div class="d-line">
				<view class="intro">
					出发日期：
				</view>
				<view class="content">
					<view class="name">
					  <view class="red-word">
					  	2018-05-20（周六）
					  </view>       
					  <view>
					  	 出发天数：   3
					  </view>
					</view>
				</view>
			</div>
			<div class="d-line">
				<view class="intro">
					出行人数：
				</view>
				<view class="content">
					<view class="name">
						<view class="red-word">
							2
						</view>
						<view>
							成人
						</view>        
						<view class="red-word child-count">
							1
						</view>
						<view>
							儿童
						</view>
					</view>
				</view>
			</div>
		</view>
	</view>
	<view class="traveller-info base-content">
		<view class="contacter">
			<view class="ctitle">联系人信息</view>
			<view class="ct-line">
				{{ contacter.name }}  {{ contacter.phone }}
			</view>
			<view class="ct-line">
				{{ contacter.email }}
			</view>
			<view class="ct-line">
				{{ contacter.address }}
			</view>
		</view>
		<view class="travellers">
			<view class="ctitle">出行人信息</view>
			<view class="t-list">
				<view class="t-item" wx:for="{{travellers}}">
					<view class="order-number">
						<view class="o-n">
							{{ index + 1 }}
						</view>
					</view>
					<view class="t-detail">
						{{ item.name }}  {{ item.phone }}
						<view>
							{{ item.idcard }}
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>

	<view class="remark">
		<view class="ctitle remark-title">备注</view>
		<textarea 
			class="remark-input"
			placeholder-style="font-size: 26rpx;color: #888;"
			placeholder="请填写备注内容" 
			maxlength="120"
			name="textarea"/>
	</view>

	<view class="operation">
		<view class="cc">
			<view class="cc-contact">
				<button class="cs_button" open-type="contact" session-from="weapp">
				</button> 
				<image class="cc-icon we-icon" src="{{wechatIcon}}" mode="scaleToFill"></image>
			</view>
		</view>
		<view class="buy">
			<view class="total">
				<view class="youhui">
					优惠：-￥40
				</view>
				<view>
					总额：￥1870
				</view>
			</view>
			<button class="buy-btn" bind:tap="handleOrder">
				确认支付 
			</button>
		</view>
	</view>
</view>