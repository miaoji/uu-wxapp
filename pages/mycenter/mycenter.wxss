/* pages/mycenter/mycenter.wxss */

.avatar {
	width: 100%;
	text-align: center;
	padding: 40rpx 0 20rpx 0;
	border-bottom: 1rpx solid #F1F2F3;
}

.avatar-img {
	width: 150rpx;
	height: 150rpx;
	border: 1px solid #FFF;
	border-radius: 50%;
	display: block;
	margin: 0 auto;
	overflow: hidden;
	object-fit: cover;
}

.list {

}

.item {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 26rpx 40rpx;
}

.title {
	font-size: 28rpx;
	color: #353535;
	display: flex;
	align-items: center;
}

.title-icon {
	width: 44rpx;
	height: 44rpx;
	margin-right: 16rpx;
}

.arrow {
	display: flex;
	align-items: center;
}

.arrow-icon {
	width: 44rpx;
	height: 44rpx;
}
.wait-pay {
	font-size: 26rpx;
	color: #888;
	padding-right: 15rpx;
	position: relative;
}
.wait-pay:after {
	content: '';
	position: absolute;
	right: 3rpx;
	top: 0rpx;
	width: 8rpx;
	height: 8rpx;
	background-color: #FF0000;
	border-radius: 50%;
	border: 1rpx solid #FF0000;
}