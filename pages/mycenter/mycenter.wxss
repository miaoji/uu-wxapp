/* pages/mycenter/mycenter.wxss */

.avatar {
	width: 100%;
	text-align: center;
	padding: 40rpx 0 20rpx 0;
	border-bottom: 1rpx solid #F1F2F3;
}

.avatar-img {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
}

.list {

}

.item {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	padding: 26rpx 40rpx;
}

.title {
	font-size: 28rpx;
	color: #353535;
	display: flex;
	align-items: center;
}

.title-icon {
	width: 44rpx;
	height: 44rpx;
	margin-right: 16rpx;
}

.arrow {
	display: flex;
	align-items: center;
}

.arrow-icon {
	width: 44rpx;
	height: 44rpx;
}