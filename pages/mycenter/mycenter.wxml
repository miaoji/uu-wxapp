<!--index.wxml-->
<view class="center">
  <view class="avatar">
    <open-data type="userAvatarUrl" class="avatar-img"></open-data>
  </view>
  <view class="list">
  	<view class="item">
  		<view class="title">
  			<image class="title-icon" src="{{orderIcon}}" mode="scaleToFill"></image>
  			<text>未出行订单</text>
  		</view>
  		<view class="arrow">
        <text class="wait-pay">待付款</text>
  			<image class="arrow-icon" src="{{arrowIcon}}" mode="scaleToFill"></image>
  		</view>
  	</view>
  	<view class="item" bind:tap="handleOrderList">
  		<view class="title">
  			<image class="title-icon" src="{{historyIcon}}" mode="scaleToFill"></image>
  			<text>历史订单</text>
  		</view>
  		<view class="arrow">
  			<image class="arrow-icon" src="{{arrowIcon}}" mode="scaleToFill"></image>
  		</view>
  	</view>
    <view class="item" bind:tap="handleCouponList">
      <view class="title">
        <image class="title-icon" src="{{couponIcon}}" mode="scaleToFill"></image>
        <text>优惠卡券</text>
      </view>
      <view class="arrow">
        <text class="wait-pay">1</text>
        <image class="arrow-icon" src="{{arrowIcon}}" mode="scaleToFill"></image>
      </view>
    </view>
  </view>
</view>
