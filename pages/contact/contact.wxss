/* pages/contact/contact.wxss */

.c-wrap {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	padding-top: 40rpx;
}

.c-item {
	width: 200rpx;
	height: 200rpx;
	border-radius: 12rpx;
	box-shadow: 0 2rpx 16rpx 0 rgba(53,53,53,0.2);
	text-align: center;

}

.cs_button {
	width: 200rpx;
	height: 200rpx;
	background: linear-gradient(to bottom right, #9EEA6A , #39AB4A);
	padding-top: 20rpx;
	box-sizing: border-box;
	/*z-index: 200;*/
	/*display: flex;
	flex-direction: column;*/
}

.c-icon {
	width: 88rpx;
	height: 88rpx;
}

.c-text {
	color: #FFF;
	font-size: 28rpx;
}

.c-wx {
	width: 100%;
	position: absolute;
	bottom: 30rpx;
	left: 0;
	pointer-events: none;
}

.wechat {
	position: relative;
}

.phone {
	background: linear-gradient(to bottom right, #6FBCF3 , #2993E7);
}